{
	"name": "industry_context_service",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"tsx watch src/server.ts\" \"tsx watch src/workers/index.ts\"",
		"build": "tsup",
		"start": "node dist/server.js",
		"start:worker": "node dist/workers/index.js",
		"dev:server": "tsx watch src/server.ts",
		"dev:worker": "tsx watch src/workers/index.ts",
		"format": "biome format . --write",
		"lint": "biome check .",
		"lint:fix": "biome check . --write"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.4",
		"@langchain/community": "^0.3.46",
		"@langchain/core": "^0.3.58",
		"@langchain/langgraph": "^0.3.3",
		"@langchain/openai": "^0.5.13",
		"@modelcontextprotocol/sdk": "^1.6.0",
		"pg": "^8.12.0",
		"bullmq": "^5.54.3",
		"dotenv": "^16.5.0",
		"dotenv-expand": "^12.0.2",
		"fs": "0.0.1-security",
		"hono": "^4.7.11",
		"http-status-codes": "^2.3.0",
		"ioredis": "^5.6.1",
		"mammoth": "^1.9.1",
		"pdf-parse": "^1.1.1",
		"pdfjs-dist": "^5.3.31",
		"uuid": "^11.1.0",
		"zod": "^3.25.64"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^20.11.17",
		"concurrently": "^9.1.2",
		"tsup": "^8.5.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3"
	}
}